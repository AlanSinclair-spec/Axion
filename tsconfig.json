{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/index.ts", "src/config/telnyx.ts", "src/services/telnyx.ts", "src/types/index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "src/controllers", "src/middleware", "src/models", "src/services/appointment.ts", "src/services/call-monitor.ts", "src/services/hvac-intelligence.ts", "src/services/lead.ts", "src/services/vapi.ts", "src/utils", "src/index-full.ts"]
}